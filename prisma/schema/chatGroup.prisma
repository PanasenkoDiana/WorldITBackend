model ChatGroup {
  id               Int     @id @default(autoincrement())
  name             String
  is_personal_chat Boolean @default(false)

  adminId Int
  admin   User @relation("AdminGroup", fields: [adminId], references: [id])

  members User[]  @relation("Members")
  avatar  String?

  messages ChatMessage[]

  @@map("chat_group")
}
